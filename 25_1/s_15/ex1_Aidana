#include <iostream>
#include <vector>
using namespace std;

int findOne(const vector<int>& v, int left, int right) {
    // Base case: if range reduced to one element
    if (left == right) {
        if (v[left] == 1) return left;
        else return -1;}

    int mid = (left + right) / 2;

    // Recurse into left half
    int leftResult = findOne(v, left, mid);
    if (leftResult != -1) return leftResult;

    // If not found, search right half
    return findOne(v, mid + 1, right);}

int main() {
    vector<int> v = {0, 0, 0, 0, 1, 0, 0, 0};
    int pos = findOne(v, 0, v.size() - 1);
    if (pos != -1)
        cout << "The position of 1 is at index: " << pos << endl;
    else
        cout << "No 1 found in vector." << endl;
    return 0;
}
